{
  "database": {
    "rules": "database.rules.json"
  },

  "hosting": {
    "public": "public",  // the only required attribute for hosting
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [ {
        "source": "/",
        "destination": "/html/homepage.html",
        "type": 301
      }]
  }
}
